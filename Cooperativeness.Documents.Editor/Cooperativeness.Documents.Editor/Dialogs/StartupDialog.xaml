<Window x:Class="StartupDialog" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Fluent="clr-namespace:Fluent;assembly=Fluent"
    Title="Startup" Height="220" ShowInTaskbar="False" WindowStyle="ToolWindow" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" Width="440">
    <Grid Background="#7BFFFFFF">
        <Fluent:Button SizeDefinition="Middle" Icon="../Images/Common/ok16.png" Header="Close" HorizontalAlignment="Right" Margin="0,0,10,10" Name="CloseButton" VerticalAlignment="Bottom">
            <Fluent:Button.ToolTip>
                <Fluent:ScreenTip Title="Close" Text="Close the Dialog" Image="../Images/Common/ok48.png" />
            </Fluent:Button.ToolTip>
        </Fluent:Button>
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="12,12,0,0" Name="TextBlock1" VerticalAlignment="Top" FontSize="14">
            Welcome to Document.Editor
        </TextBlock>
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="20,41,0,0" Name="TextBlock2" VerticalAlignment="Top">
            Hello and welcome to Document.Editor, click Close to get started or:
        </TextBlock>
        <Fluent:CheckBox Header="Show on Startup" Foreground="Black" IsChecked="True" HorizontalAlignment="Left" Margin="10,0,0,10" Name="ShowOnStartupCheckBox" VerticalAlignment="Bottom" />
        <Fluent:Button Name="OnlineHelpButton" Header="Online Help" Style="{DynamicResource ButtonBackstageStyle}" Margin="10,74,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Fluent:Button.LargeIcon>
                <Image Height="32" Width="32" Source="../Images/Help/onlinehelp32.png" />
            </Fluent:Button.LargeIcon>
            <Fluent:Button.ToolTip>
                <Fluent:ScreenTip Title="Online Help" Text="Get Help Online" Image="../Images/Help/onlinehelp48.png" />
            </Fluent:Button.ToolTip>
        </Fluent:Button>
        <Fluent:Button Name="GetPluginsButton" Header="Get Plugins" Style="{DynamicResource ButtonBackstageStyle}" HorizontalAlignment="Left" Margin="97,74,0,0" VerticalAlignment="Top">
            <Fluent:Button.LargeIcon>
                <Image Height="32" Width="32" Source="../Images/Tools/plugins32.png" />
            </Fluent:Button.LargeIcon>
            <Fluent:Button.ToolTip>
                <Fluent:ScreenTip Title="Get Plugins" Text="Get More Plugins for Document.Editor" Image="../Images/Tools/plugins48.png" />
            </Fluent:Button.ToolTip>
        </Fluent:Button>
        <Fluent:Button Name="WebsiteButton" Header="Get Plugins" Style="{DynamicResource ButtonBackstageStyle}" HorizontalAlignment="Left" Margin="184,74,0,0" VerticalAlignment="Top">
            <Fluent:Button.LargeIcon>
                <Image Height="32" Width="32" Source="../Images/Help/website32.png" />
            </Fluent:Button.LargeIcon>
            <Fluent:Button.ToolTip>
                <Fluent:ScreenTip Title="Website" Text="Visit the Website" Image="../Images/Help/website48.png" />
            </Fluent:Button.ToolTip>
        </Fluent:Button>
    </Grid>
</Window>
